<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cadhut.islamic.Quran16Line">

    <application
        android:name="com.cadhut.islamic.Quran16Line.MyApplication2"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cadhut.islamic.Quran16Line.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name="com.cadhut.islamic.Quran16Line.MainPage"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cadhut.islamic.Quran16Line.JuzContents"
            android:screenOrientation="portrait" />
        <activity android:name="com.cadhut.islamic.Quran16Line.SuraContents"
            android:screenOrientation="portrait" />

        <activity
            android:name=".BookMark"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ad_app_id" />

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>